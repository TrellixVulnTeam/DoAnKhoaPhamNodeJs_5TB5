          processData: false,
          data: json,
          success: function (result) {
            if (result) {
              location.reload();
              //Loading overlay hide
              $.LoadingOverlay("hide");
            }
          },
          error: function (err) {
            if (err.status = 501) {

            }
          }
        });
      });
      // Process image input
      $(".upload-button").on('click', function () {
        $(".file-upload").click();
      });
      $(".border-image").on('click', function () {
        $(".file-upload").click();
      });
      $(".file-upload").on('change', function () {
        $("#default_image").css("display", "none");
        readURL(this);
      });
      // Show picture for avatar
      var readURL = function (input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();

          reader.onload = function (e) {
            $('.profile-pic').attr('src', e.target.result);
          }

          reader.readAsDataURL(input.files[0]);
        }
      }
      // Process add image question
      $(".question-border-image").on('click', function () {
        $(".question-file-upload").click();
      });
      $(".question-file-upload").on('change', function () {
        $("#question-default_image").css("display", "none");
        questionReadURL(this);
      });

      // Show picture for avatar
      var readURL = function (input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();

          reader.onload = function (e) {
            $('.profile-pic').attr('src', e.target.result);
          }

          reader.readAsDataURL(input.files[0]);
        }
      }

      // Show picture for question
      var questionReadURL = function (input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();

          reader.onload = function (e) {
            $('.question-profile-pic').attr('src', e.target.result);
          }

          reader.readAsDataURL(input.files[0]);
        }
      }

      // Validate form formCreateSetq
      $('#formCreateSetq').validate({
      rules: {
        setq_title: {
          required: true,
        },
      },
      messages: {
        setq_title: {
          required: "Tên bộ câu hỏi bắt buộc nhập",
        },
      },
      errorElement: 'span',
      errorPlacement: function (error, element) {
        error.addClass('invalid-feedback');
        element.closest('.form-group').append(error);
      },
      highlight: function (element, errorClass, validClass) {
        $(element).parent().addClass('label-floating has-danger');
      },
      unhighlight: function (element, errorClass, validClass) {
        $(element).parent().removeClass('label-floating has-danger').addClass('label-floating has-success');
      },
      submitHandler: function(form) {
        var formData = new FormData($(form)[0]);
        //Loading overlay show
        $.LoadingOverlay("show");
        formData.set("setq_image", $('.profile-pic').attr('src'));
        var object = {};
        formData.forEach((value, key) => object[key] = value);
        var json = JSON.stringify(object);

        $.ajax({
          url: "/api/setqs",
          type: "POST",
          contentType: "application/json",
          processData: false,
          data: json,
          success: function (result) {
            if (result) {
              window.location.href = "/setq/update/" + result.data._id;
              //Loading overlay hide
              $.LoadingOverlay("hide");
            }
          },
          error: function (err) {
            if (err.status = 501) {

            }
          }
        });
      }
    });
  </script>
