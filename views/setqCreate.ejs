        var formData = new FormData();
        //Loading overlay show
        $.LoadingOverlay("show");
        formData.append('question_title', $('.question_title').html());
        formData.append('question_image', $('.question_image').html());

        var object = {};
        formData.forEach((value, key) => object[key] = value);
